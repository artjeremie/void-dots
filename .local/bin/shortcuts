#!/bin/sh
shell=~/.config/zsh/sc
vifm=~/.config/vifm/sc
rm "$vifm"
while read -r line; do
  line=$(echo $line | sed "s@~@$HOME@")
  set -- $line
  case $line in
    \#*|"") continue
  esac
  if [ -d "$2" ]; then
    echo "alias $1='cd \"$2\"'"
    echo "hash -d $1=\"$2\""
    echo "nnoremap g$1 :cd \"$2\"<cr>" >>"$vifm"
  else
    echo "alias $1='$EDITOR \"$2\"'"
  fi
  echo "export $1=\"$2\""
done <"$shell" >"$shell.sh"
