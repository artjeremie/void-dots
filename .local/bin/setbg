#!/bin/sh
# set wallpaper and location of link to wallpaper link
#bgloc="${XDG_DATA_HOME:-$HOME/.local/share/}/bg"

if [ -f "$1" ]; then
    cp "$1" "${XDG_DATA_HOME:-$HOME/.local/share/}/bg"
    notify-send -i ~/.local/share/bg "Wallpaper changed."
fi
xwallpaper --daemon --zoom "${XDG_DATA_HOME:-$HOME/.local/share/}/bg"
