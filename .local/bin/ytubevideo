#!/bin/sh

script="${0##*/}" url="$1"

notify-send --urgency low "Youtube download" "started $url"~
#if yt-dlp --restrict-filenames -o "$HOME/.config/dl/youtube-dl/%(title)s.%(ext)s" "$url"
if yt-dlp -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4' --restrict-filenames -o "$HOME/.config/dl/youtube-dl/vids/%(title)s.%(ext)s" "$url"
    then
        notify-send --urgency normal "Youtube download" "finished $url"
    else
        notify-send --urgency critical "Youtube download" "failed $url"
fi
